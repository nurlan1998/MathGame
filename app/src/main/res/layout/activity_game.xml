<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.GameActivity">

    <TextView
        android:id="@+id/countQuestion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:padding="8dp"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvArithmeticExpressions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_margin="16dp"
        android:layout_marginLeft="64dp"
        android:text="+"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvResult"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#4fc3f7"
        android:gravity="center"
        android:onClick="onClick"
        android:padding="32dp"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@id/tvResult2"
        app:layout_constraintEnd_toStartOf="@id/tvResult1"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tvResult1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#aed581"
        android:gravity="center"
        android:onClick="onClick"
        android:padding="32dp"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@id/tvResult2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/tvResult" />

    <TextView
        android:id="@+id/tvResult2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:background="#ffb74d"
        android:gravity="center"
        android:onClick="onClick"
        android:padding="32dp"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/tvResult3" />

    <TextView
        android:id="@+id/tvResult3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:background="#b0bec5"
        android:gravity="center"
        android:onClick="onClick"
        android:padding="32dp"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/tvResult2"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>